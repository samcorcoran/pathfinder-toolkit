<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonRollInitiative"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/initiative_tracker_roll_button" />

    <Button
        android:id="@+id/buttonCycleInitiative"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/initiative_tracker_cycle_button" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#FF909090" />

    <ListView
        android:id="@+id/listViewEncounterMembers"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>
